<h1>Sushi!</h1>

<h1>Sushi Creations</h1>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

	<h1>Clean Plate Club of Sushi</h1>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Create Sushi</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Sushi creation:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Have you tried your masterpiece before?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eaten?<br>
    <input type="radio" name="sleepy" value="0"> Ready-to-eat?
  </div>

  <button type="submit">Add Creation!</button>
</form>
